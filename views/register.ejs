<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs') %>
    </head>
<body>
    <!-- JS bootstrap alert -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

    <div class = "popup">
        <%- include('./partials/messages.ejs') %>
    </div>
    
    <section class="log">

        <div class="box">

            <div class="elements">
                <div class="header"><h1>Simple Notes</h1></div>
                <p>Sign up</p>

                <form action="/users/register" method="POST">
                    <input type="text" id="username" name ="username" class="btn" placeholder="Username" required>

                    <input type="email" id="email" name ="email" class="btn" placeholder="E-mail" required>

                    <input type="password" id="password" name ="password"class="btn" placeholder="Password" required>

                    <input type="submit" class="send" name="Send" value="Sign up">
                    <a href="/users/login">Already have an account</a>
                </form>

            </div>
            
        </div>

    </section>
    


</body>
</html>